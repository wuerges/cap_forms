<p id="notice"><%= notice %></p>

<h1>Question Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Locked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_templates.each do |question_template| %>
      <tr>
        <td><%= question_template.name %></td>
        <td><%= question_template.locked %></td>
        <td><%= link_to 'Show', question_template %></td>
        <td><%= link_to 'Edit', edit_question_template_path(question_template) %></td>
        <td><%= link_to 'Destroy', question_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question Template', new_question_template_path %>
