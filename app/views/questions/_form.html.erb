<%= form_with(model: question, local: true) do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_field :text %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.number_field :priority %>
  </div>

  <div class="field">
    <%= form.label :question_template_id %>
    <%= form.collection_select :question_template_id, QuestionTemplate.all, :id, :name, { selected: question.template_id } %>
  </div>

  <div class="field">
    <%= form.label :question_type %>
    <%= form.select :question_type, Question.question_types.keys.map { |w| [w.humanize, w] } %>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
